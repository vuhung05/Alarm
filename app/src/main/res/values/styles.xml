<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">#ffff</item>
        <item name="android:actionMenuTextAppearance">@style/customActionBar</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="SwitchVibrate"
        parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="SwitchChildItem"
        parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="RatioButtonColor"
        parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="customActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
    </style>


</resources>
